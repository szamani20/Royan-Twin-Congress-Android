<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/sectionCardView"
    style="@style/TwinCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:visibility="gone"
    app:cardElevation="8dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sectionTopBorder"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/sectionIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="@string/stem_cell_congress"
                android:textSize="16sp" />

        </LinearLayout>

        <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sectionMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ext:documentView_insetPadding="10dp"
            ext:documentView_lineHeightMultiplier="1.1"
            ext:documentView_textAlignment="justified"
            ext:documentView_textSize="18sp"
            ext:documentView_textTypefacePath="fonts/AvenirLTStd-Light.otf" />

    </LinearLayout>

</android.support.v7.widget.CardView>